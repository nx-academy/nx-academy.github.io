---
interface Props {
    content: string,
    job: string
    name: string
    picture: string
}

const {
    content,
    job,
    name,
    picture
} = Astro.props
---

<div class="testimonial-wrapper">
    <header class="testimonial-header">
      <img src={`/${picture}`} alt={`${name} - ${job}`}>
      <h4>
        {name}
        <span>{job}</span>
      </h4>
    </header>
    <p>
        {content}
    </p>
</div>

<style>
    .testimonial-wrapper {
        border: 1px solid #333;
        padding: 16px;
        border-radius: 4px;
    }

    .testimonial-header {
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
    }

    .testimonial-header img {
        height: 56px;
        width: 56px;
        object-fit: cover;
        border-radius: 50%;
    }

    .testimonial-header h4 {
        display: flex;
        flex-direction: column;
        gap: 4px;
        color: #FFF;

        span {
            font-size: 12px;
            color: #bababa;
        }
    }

    .testimonial-wrapper p {
        margin-bottom: 0;
    }
</style>
