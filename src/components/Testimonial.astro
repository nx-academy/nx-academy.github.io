---
interface Props {
  content: string;
  job: string;
  name: string;
  picture: string;
}

const { content, job, name, picture } = Astro.props;
---

<div class="testimonial-wrapper">
  <p>
    {content}
  </p>
  <footer class="testimonial-user">
    <img src={picture} alt={`${name} - ${job}`} />
    <h4>
      {name}
      <span>{job}</span>
    </h4>
  </footer>
</div>

<style>
  .testimonial-wrapper {
    border: 1px solid var(--borderPrimary);
    padding: 24px 16px;
    border-radius: 4px;
    height: 500px;
    display: flex;
    flex-direction: column;
    gap: 16px;

    @media screen and (min-width: 768px) {
      height: 460px;
    }

    @media screen and (min-width: 1024px) {
      height: 420px;
    }
  }

  .testimonial-wrapper p {
    margin-bottom: 0;
  }

  .testimonial-user {
    display: flex;
    gap: 16px;
    align-items: center;
    margin-top: auto;
  }

  .testimonial-user img {
    height: 56px;
    width: 56px;
    object-fit: cover;
    border-radius: 50%;
  }

  .testimonial-user h4 {
    display: flex;
    flex-direction: column;
    gap: 4px;
    color: var(--titleColor);

    span {
      font-size: 12px;
      color: var(--textColor);
    }
  }
</style>
