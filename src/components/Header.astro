<style>
  header {
    align-items: center;
    background-color: var(--backgroundColorPrimary);
    border-bottom: 1px solid var(--borderPrimary);
    display: flex;
    justify-content: space-between;
    position: relative;
    z-index: 100;
    margin-bottom: 1.5rem;
  }

  .innner-div-wrapper {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin-left: auto;
    margin-right: auto;
    max-width: 1100px;
    padding-bottom: 1.5rem;
    padding-top: 1.5rem;
    width: 90%;
  }

  .brand a {
    color: var(--linkColor);
    font-family: "Pixelify Sans", sans-serif;
    font-size: 1.4rem;

    &:hover {
      color: var(--linkHoverColor);
    }
  }

  a {
    text-decoration: none;
    color: var(--linkColor);
    font-size: 1.125rem;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--linkHoverColor);
  }

  .desktop-nav {
    display: none;
  }

  html.theme-dark .sun-icon {
    display: none;
  }

  html.theme-light .moon-icon {
    display: none;
  }

  .theme-btn {
    height: 32px;
    width: 32px;
    margin-left: auto;
    margin-right: 24px;
    cursor: pointer;
  }

  .burger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 32px;
    height: 24px;
    cursor: pointer;
    z-index: 1001;
  }

  .burger span {
    height: 4px;
    width: 100%;
    background-color: var(--burgerColor);
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .burger:hover span {
    background-color: var(--burgerHoverColor);
  }

  .burger.active span:nth-child(1) {
    transform: rotate(45deg) translateY(10px);
  }

  .burger.active span:nth-child(2) {
    opacity: 0;
  }

  .burger.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-10px);
  }

  .mobile-nav {
    position: fixed;
    top: 0;
    right: 0;
    width: 80vw;
    max-width: 320px;
    height: 100vh;
    background: var(--backgroundColorMobileNav);
    backdrop-filter: blur(6px);
    transform: translateX(100%);
    opacity: 0;
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
    z-index: 1000;
    padding: 5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .mobile-nav.active {
    transform: translateX(0);
    opacity: 1;
  }

  @media screen and (min-width: 1024px) {
    .innner-div-wrapper {
      justify-content: unset;
      gap: 32px;
    }

    .desktop-nav {
      display: flex;
      gap: 2rem;
    }

    .theme-btn {
      height: 28px;
      width: 28px;
      margin-right: 0;
    }

    .burger,
    .mobile-nav {
      display: none !important;
    }
  }
</style>

<script>
  const $burger = document.querySelector(".burger") as HTMLDivElement;
  const $mobileNav = document.querySelector(".mobile-nav") as HTMLElement;
  const $body = document.body as HTMLBodyElement;

  const $themeBtn = document.querySelector(".theme-btn") as HTMLElement;

  $themeBtn.addEventListener("click", function () {
    if (document.documentElement.classList.contains("theme-light")) {
      document.documentElement.classList.remove("theme-light");
      document.documentElement.classList.add("theme-dark");
      localStorage.setItem("theme", "theme-dark");
    } else {
      document.documentElement.classList.remove("theme-dark");
      document.documentElement.classList.add("theme-light");
      localStorage.setItem("theme", "theme-light");
    }
  });

  $burger.addEventListener("click", () => {
    const isOpen = $burger.classList.toggle("active");

    $mobileNav.classList.toggle("active");
    $burger.setAttribute("aria-expanded", String(isOpen));
    $mobileNav.setAttribute("aria-hidden", String(!isOpen));

    if (isOpen) {
      $body.style.overflow = "hidden";
      $body.style.height = "100vh";
    } else {
      $body.style.overflow = "";
      $body.style.height = "";
    }
  });
</script>
