---
import NavigationDesktop from "./NavigationDesktop.astro";
import NavigationMobile from "./NavigationMobile.astro";
---

<header>
  <NavigationDesktop />
  <NavigationMobile />
</header>

<style>
  header {
    border-bottom: 1px solid #333;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    margin-left: auto;
    margin-right: auto;
    max-width: 1100px;
    padding-bottom: 0.75rem;
    padding-top: 1.5rem;
    width: 90%;
  }
</style>

<script>
  const $burgerBtn = document.querySelector(".burger-menu button");
  const $closeBtn = document.querySelector(".close-icon button");
  const $mobileNavigation = document.querySelector(".mobile-navigation");

  const $body = document.querySelector("body");

  $burgerBtn?.addEventListener("click", function () {
    $mobileNavigation?.classList.remove("hidden");
    $mobileNavigation?.classList.add("fade-in");

    $body!.style.height = "100vh";
    $body!.style.overflow = "hidden";
  });

  $closeBtn?.addEventListener("click", function () {
    $mobileNavigation?.classList.remove("fade-in");
    $mobileNavigation?.classList.add("hidden");

    $body!.style.height = "";
    $body!.style.overflow = "";
  });
</script>
