  </head>
  <body>
    <div class="page-wrapper">
      <Header />
      {
        pathname !== "/" && <Breadcrumbs breadcrumbs={breadcrumbs} />
      }
      <div style="flex: 1;">
        <slot />
      </div>
      <Footer />
      <ScrollToTopButton />
      <ResumePopup client:load />
    </div>
  </body>
</html>

<style>
  html, body {
    height: 100%;
    margin: 0;
  }

  body {
    background-color: #151515;
    color: #fff;
    font-family: "Space Grotesk", sans-serif;
  }

  .page-wrapper {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    const currentPath = window.location.pathname
    localStorage.setItem("lastVisited", currentPath)
  })
</script>
