---
import type { Breadcrumb } from "../types/Breadcrumb"

interface Props {
  title?: string,
  description?: string
  breadcrumbs?: Breadcrumb[]
}

import "../styles/normalize.css"
import "../styles/reset.css"

import "@fontsource/pixelify-sans";
import "@fontsource/space-grotesk";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro"

let { title, description, breadcrumbs } = Astro.props

title = title ? `${title} - NX Academy` : "Passez au niveau supérieur en programmation avec NX Academy"
description = description ? description : "Avec NX Academy, suivez gratuitement des cours en ligne et améliorez vos compétences en programmation et devops. Aucun compte n'est requis."

const { pathname } = Astro.url
---

<html lang="FR-fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/svg+xml" href="/icon-nx.png" />
    
    <title>{title}</title>
    <meta name="description" content={description}>

    {
      import.meta.env.PROD && <script>
        (function(h,o,u,n,d) {
          // @ts-ignore
          h=h[d]=h[d]||{q:[],onReady:function(c){h.q.push(c)}}
          // @ts-ignore
          d=o.createElement(u);d.async=1;d.src=n
          // @ts-ignore
          n=o.getElementsByTagName(u)[0];n.parentNode.insertBefore(d,n)
        })(window,document,'script','https://www.datadoghq-browser-agent.com/eu1/v6/datadog-rum.js','DD_RUM')
        // @ts-ignore
        window.DD_RUM.onReady(function() {
          // @ts-ignore
        window.DD_RUM.init({
          clientToken: 'pub7662c92e1ecc427c59eda2d0034f7bc7',
          applicationId: 'a1998a8c-a21e-4944-a708-9f628663f454',
          // `site` refers to the Datadog site parameter of your organization
          // see https://docs.datadoghq.com/getting_started/site/
          site: 'datadoghq.eu',
          service: 'nx-academy-website',
          env: 'prod',
          // Specify a version number to identify the deployed version of your application in Datadog
          version: '0.0.1',
          sessionSampleRate: 100,
          sessionReplaySampleRate: 20,
          defaultPrivacyLevel: 'mask-user-input',
        });
      })</script>
    }

    

  </head>
  <body>
    <Header />
    {
      pathname !== "/" && <Breadcrumbs breadcrumbs={breadcrumbs} />
    }
    <slot />
    <div class="scroll-to-top-btn">
      <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 5V19M12 5L6 11M12 5L18 11" stroke="#37474F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </div>
    <Footer />
  </body>
</html>

<style>
  body {
    background-color: #151515;
    color: #fff;
    font-family: "Space Grotesk", sans-serif;
  }

  .scroll-to-top-btn {
    position: fixed;
    bottom: 40px;
    right: 24px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #FFF;
    border-radius: 50%;
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.15);
    cursor: pointer;

    @media screen and (min-width: 1024px) {
      right: 64px;
    }
  }
</style>
