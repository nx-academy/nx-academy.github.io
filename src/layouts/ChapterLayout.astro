---
import BaseLayout from "./BaseLayout.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <div>
    <Header />
    <slot />
    <div class="links-wrapper">
      <a class="back-button" href="#">Revenir au chapitre précédent</a>
      <a class="next-button" href="#">Passer au chapitre suivant</a>
    </div>
    <Footer />
  </div>
</BaseLayout>

<style is:global>
  div {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  section {
    width: 90%;
    /* max-width: 680px; */
    max-inline-size: 66ch;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
  }

  img {
    width: 100%;
    margin-bottom: 1rem;
    border-radius: 8px;
  }

  p {
    margin-bottom: 1.5rem;
  }

  hr {
    color: #fff;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  a {
    text-decoration: none;
    color: #4effa0;
    font-weight: 500;
    transition: 0.4s color;

    &:hover {
      color: #4effa0bb;
    }
  }

  .links-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    a {
      text-decoration: none;
      color: #151515;
      font-weight: 500;
      transition: 0.4s color;
      border: 1px solid #4effa0;
      background-color: #4effa0;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      transition: 0.4s background-color;

      &:hover {
        background-color: #4effa0aa;
      }
    }
  }
</style>
