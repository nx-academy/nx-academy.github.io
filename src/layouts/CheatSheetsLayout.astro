---
interface Props {
  frontmatter: {
    title: string;
    description: string;
  };
}

import theme from "../config/theme";
import BaseLayout from "./BaseLayout.astro";

const {
  colors: { neonGreen, neonGreenLight, black },
} = theme;

const {
  frontmatter: { title, description },
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div>
    <slot />
  </div>
</BaseLayout>

<style>
  div {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }
</style>

<style is:global define:vars={{ neonGreen, neonGreenLight, black }}>
  img {
    max-width: 100%;
    border-radius: 8px;
  }

  article {
    max-inline-size: 66ch;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: #fefefe;
  }

  h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #fefefe;
  }

  p {
    margin-bottom: 1.5rem;
    color: #bababa;
  }

  ul {
    color: #bababa;
  }

  a {
    text-decoration: none;
    color: var(--neonGreen);
    font-weight: 500;
    transition: 0.4s color;

    &:hover {
      color: var(--neonGreenLight);
    }
  }

  p > code {
    background-color: var(--neonGreen);
    padding: 0.25rem;
    color: var(--black);
  }

  pre,
  ul {
    margin-bottom: 1.75rem;
  }

  blockquote {
    padding-left: 2rem;
    font-style: italic;
  }
</style>
