    margin-bottom: 2rem;
    color: #BABABA;
  }

  a {
    text-decoration: none;
    color: #151515;
    font-weight: 500;
    transition: 0.4s color;
    border: 1px solid #4effa0;
    background-color: #4effa0;
    padding: .5rem 1rem;
    border-radius: 8px;
    transition: .4s background-color;

    &:hover {
      background-color: #4effa0AA;
    }
  }
