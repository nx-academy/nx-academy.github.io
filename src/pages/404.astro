---
import BaseLayout from "../layouts/BaseLayout.astro";

import Button from "../components/Button.astro";

const pageTitle = "Page non trouvée";
const pageDescription = "";
---

<BaseLayout title={pageTitle}>
  <main class="main-wrapper">
    <div class="content-wrapper">
      <h1>Page introuvable</h1>
      <p>
        Désolé mais cette page n'existe pas (<small>encore</small>)...
      </p>
      <div class="button-wrapper">
        <Button label="Retourner à l'accueil" href="/" type="primary" />
      </div>
    </div>
    <img
      class="error-picture"
      src="/404.png"
      alt="Un robot regardant une carte, perdu dans le désert, pixel art"
    />
  </main>
</BaseLayout>

<style>
  .main-wrapper {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
    max-width: 1100px;
    display: flex;
    flex-direction: column-reverse;

    h1,
    p {
      margin-top: 0;
      margin-bottom: 0;
    }

    p {
      font-size: 20px;
    }
  }

  .error-picture {
    border-radius: 4px;
    width: 100%;
  }

  .content-wrapper {
    margin-top: 32px;
  }

  .button-wrapper {
    margin-top: 48px;
  }

  @media screen and (min-width: 1024px) {
    .main-wrapper {
      flex-direction: row;
      gap: 48px;
      padding-top: 48px;
    }

    .content-wrapper {
      width: 50%;
      margin-top: 0;
    }

    .error-picture {
      width: 50%;
    }

    .button-wrapper {
      width: fit-content;
    }
  }
</style>
