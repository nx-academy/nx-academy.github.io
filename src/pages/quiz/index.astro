---
import BaseLayout from "../../layouts/BaseLayout.astro"

import QuizCard from "../../components/QuizCard.astro"
import Warning from "../../components/Warning.astro"

import { QUIZZES } from "../../data/quiz"
---

<BaseLayout>
    <main>
        <!-- <QuizIsland client:load /> -->
        <h1>Nos derniers quiz</h1>
        <Warning />
        <div class="quiz-cards-wrapper">
            {
                QUIZZES.map(quiz => (
                    <QuizCard
                        href={quiz.href}
                        imgAlt={quiz.imgAlt}
                        imgSrc={quiz.imgSrc}
                        level={quiz.level}
                        title={quiz.title}
                    />
                ))
            }
        </div>
    </main>
</BaseLayout>

<style>
    main {
        width: 90%;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
    }

    .quiz-cards-wrapper {
        display: grid;
        gap: 32px;
        max-width: 1100px;

        @media screen and (min-width: 768px) {
            grid-template-columns: repeat(2, 1fr);
        }

        @media screen and (min-width: 1024px) {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
