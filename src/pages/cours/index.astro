---
import BaseLayout from "../../layouts/BaseLayout.astro"

import Warning from "../../components/Warning.astro"

const pageTitle = "Nos cours"
const pageDescription = "Passez au niveau supérieur avec des cours en ligne gratuits couvrant des sujets avancés en programmation et DevOps."

// For now, I put the courses links here
type Course = {
    name: string
    description: string
    href: string
}

const COURSES: Course[] = [
    {
        name: "Conteneurisez vos applications avec Docker",
        description: "Une super description",
        href: "/cours/docker-et-docker-compose"
    },
    {
        name: "Maîtrisez les pipelines CI/CD avec les GitHub Actions",
        description: "Une super description",
        href: "/cours/ci-cd-github-actions"
    }
]
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <main class="main-wrapper">
        <h1>Nos derniers cours</h1>
        <Warning />
        <ul class="courses-wrapper">
            {
                COURSES.map(course => (
                    <li>
                        <a class="course-link" href={course.href}>
                            {course.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </main>
</BaseLayout>


<style>
    .main-wrapper {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
        max-width: 1100px;
    }

    .courses-wrapper {
        margin-top: 16px;
    }

    .course-link {
        color: #FFF;
        text-decoration: none;
    }
</style>
